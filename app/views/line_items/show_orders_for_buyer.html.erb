<div class="container">
  <h3>Orders:</h3>
  <table class="table table-striped table-bordered">
    <tr>
      <th colspan="4" align="center">Order Info</th>
    </tr>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay Type</th>
    </tr>

    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.order.name %></td>
        <td><%= line_item.order.address %></td>
				<td><%= line_item.order.email %></td>
        <td><%= line_item.order.pay_type %></td>
      </tr>
    <% end %>
  </table>
</div>
